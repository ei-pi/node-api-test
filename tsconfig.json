{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src", "addon/addon.d.ts"],
  "exclude": ["node_module*"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}